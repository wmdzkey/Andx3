<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@drawable/bg_welcome">

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">
        <ImageView
                android:id="@+id/welcome_iv_logo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_logo_welcome"/>
        <LinearLayout
                android:id="@+id/welcome_ll_btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/welcome_iv_logo"
                android:layout_margin="10dip">

            <Button
                    android:id="@+id/welcome_btn_register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="30dip"
                    android:background="@drawable/btn_bg_write"
                    android:text="注册"/>

            <Button
                    android:id="@+id/welcome_btn_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="30dip"
                    android:layout_marginRight="30dip"
                    android:background="@drawable/btn_bg_write"
                    android:text="登陆"/>

        </LinearLayout>

        <LinearLayout
                android:id="@+id/welcome_ll_exp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dip">

            <Button
                    android:id="@+id/welcome_btn_experience"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="30dip"
                    android:layout_marginRight="30dip"
                    android:background="@drawable/btn_bg_write"
                    android:text="偷偷体验一下"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/welcome_ll_info"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="10dip"
            android:gravity="center_horizontal"
            android:orientation="vertical">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="贴吧看图神器"
                android:textColor="@color/text"
                android:textSize="25sp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Copyright © 2013 UMK TECH All Rights Reserved"
                android:textColor="@color/text"
                android:textSize="10sp"/>
    </LinearLayout>

</RelativeLayout>

