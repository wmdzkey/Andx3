<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@color/bg_color_default"
              android:orientation="vertical">

    <include
            android:id="@+id/header"
            layout="@layout/common_headerbar_default"/>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:padding="10dip">

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pic_about_logo"/>

            <TextView
                    android:id="@+id/more_tv_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="版本"/>
        </LinearLayout>


            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingLeft="15dip"
                    android:paddingRight="15dip">


                <Button
                        android:id="@+id/more_btn_more_new"
                        android:layout_width="fill_parent"
                        android:layout_height="40dip"
                        android:layout_marginTop="10dip"
                        android:background="@drawable/btn_bg_write"
                        android:text="新功能"
                        android:textColor="@color/text"
                        android:textSize="15sp" />

                <Button
                        android:id="@+id/more_btn_advice"
                        android:layout_width="fill_parent"
                        android:layout_height="40dip"
                        android:layout_marginTop="10dip"
                        android:background="@drawable/btn_bg_write"
                        android:text="意见反馈"
                        android:textColor="@color/text"
                        android:textSize="15sp" />

                <Button
                        android:id="@+id/more_btn_about"
                        android:layout_width="fill_parent"
                        android:layout_height="40dip"
                        android:layout_marginTop="10dip"
                        android:background="@drawable/btn_bg_write"
                        android:text="关于"
                        android:textColor="@color/text"
                        android:textSize="15sp" />

            </LinearLayout>

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="center_horizontal"
                android:orientation="vertical">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="贴吧看图神器"
                    android:textColor="@color/text"
                    android:textSize="25sp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Copyright © 2013 UMK TECH All Rights Reserved"
                    android:textColor="@color/text"
                    android:textSize="10sp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>

